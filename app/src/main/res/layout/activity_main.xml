<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <TextView android:text="@string/text_cellinfo" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/text_cellinfo"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <TextView android:text="@string/titre_n_cells" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/titre_n_cells"
        android:layout_above="@+id/titre_cellid"
        android:layout_alignParentStart="true" />

    <TextView android:text="@string/text_n_cells" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/text_n_cells"
        android:layout_alignTop="@+id/titre_n_cells"
        android:layout_alignParentRight="true" />

    <TextView android:text="@string/titre_cellid" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/titre_cellid"
        android:layout_above="@+id/titre_n_bdd"
        android:layout_alignParentLeft="true"
        />

    <TextView android:text="@string/bouton_text2" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/text_cellid"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/titre_cellid"/>

    <TextView android:text="@string/titre_n_bdd" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/titre_n_bdd"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetAllCellInfo !!"
        android:id="@+id/button"
        android:onClick="actionBouton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffff7f4d" />

</RelativeLayout>
